# NOTE: This file is generated from pyproject.toml.in by CMake.
# Do not edit this file directly. Edit pyproject.toml.in instead.

[build-system]
requires = ["setuptools>=64", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "teleopcore"
version = "0.1.0"
description = "TeleopCore - Teleoperation with Device I/O"
readme = "README.md"
requires-python = "==@TELEOPCORE_PYTHON_VERSION@.*"
license = "Apache-2.0"
authors = [
    {name = "NVIDIA"}
]
dynamic = ["dependencies", "optional-dependencies"]

[tool.setuptools.dynamic]
dependencies = {file = ["requirements.txt"]}
optional-dependencies.dev = {file = ["requirements-dev.txt"]}

[tool.setuptools]
packages = [
    "teleopcore",
    "teleopcore.deviceio",
    "teleopcore.oxr",
    "teleopcore.plugin_manager",
    "teleopcore.schema",
    "teleopcore.retargeting_engine",
    "teleopcore.retargeting_engine.interface",
    "teleopcore.retargeting_engine.tensor_types"
]
include-package-data = true

[tool.setuptools.package-data]
teleopcore = ["*.so", "*.pyd", "*.pyi", "py.typed"]
"teleopcore.deviceio" = ["*.so", "*.pyd", "*.pyi"]
"teleopcore.oxr" = ["*.so", "*.pyd", "*.pyi"]
"teleopcore.plugin_manager" = ["*.so", "*.pyd", "*.pyi"]
"teleopcore.schema" = ["*.so", "*.pyd", "*.pyi"]

[tool.uv]
# Only use managed Python installations (not system Python)
python-preference = "only-managed"

