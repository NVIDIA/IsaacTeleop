include "point.fbs";
include "quaternion.fbs";

namespace core;

// Describes a pose.
struct Pose {
  // Position of the pose (x, y, z) in meters.
  position: Point (id: 0);

  // Orientation of the pose (x, y, z, w).
  orientation: Quaternion (id: 1);
}
